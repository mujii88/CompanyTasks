{
  "install": "npm install",
  "start": "node index.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules",
      "data"
    ],
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "exclude": [
        "^public/",
        "^dist/"
      ],
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 900
  }
}
